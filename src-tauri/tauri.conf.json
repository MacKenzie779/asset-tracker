{
  "package": {
    "productName": "AssetTracker",
    "version": "0.1.0"
  },
  "tauri": {
    "macOSPrivateApi": false,
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      }
    },
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' tauri: asset: http://localhost:* https://localhost:*; img-src 'self' data: asset:; media-src 'self' data: asset:"
    },
    "windows": [
      {
        "title": "AssetTracker",
        "width": 1100,
        "height": 720,
        "resizable": true
      }
    ],
    "bundle": {
      "active": true,
      "targets": ["nsis"],
      "identifier": "com.github.mackenzie779.assettracker",
      "icon": ["icons/icon.ico","icons/icon.icns","icons/icon.png"],
      "windows": {
        "webviewInstallMode": { "type": "downloadBootstrapper" }
      }
    }
  },
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  }
}